<div class="p-5 gap-5 d-flex justify-content-around">
  <div class="container border-blue border-shadow-blue">
    <h2>My Confirmed Bookings </h2>
    <% if @make_bookings == []  %>
      <h3>...you have no bookings...</h3>
    <% else %>
      <% @make_bookings.each do |booking| %>
        <% if booking.status == 'accepted' %>
          <div class="status-bar">
            <%= render 'status_bar', booking: booking, user: booking.offer.user %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="container border-blue border-shadow-blue">
    <h2>My Pending Bookings</h2>
    <% if @make_bookings == []  %>
      <h3>...you have no bookings...</h3>
    <% else %>
      <% @make_bookings.each do |booking| %>
        <% if booking.status == 'pending' %>
          <div class="status-bar">
            <%= render 'status_bar', booking: booking, user: booking.offer.user %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
