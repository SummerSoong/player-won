<div class="hero-image">
  <div class="d-flex justify-content-center">
    <img class="profilepic" src="/assets/yayaimg.jpg" alt="">
  </div>
</div>
<div class="container cards-dashboard d-flex">
  <div class="booked_by">
    <h2>I have booked...</h2>
    <% if @make_bookings == []  %>
      <h3>...you have no bookings...</h3>
    <% else %>
      <% @make_bookings.each do |booking| %>
        <div class="card-product">
          <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> %>
          <div class="card-product-infos">
            <%= booking.offer.user.name %> on
            <%= booking.offer.game.name %> on
            <%= link_to 'x', booking_path(booking), data: { turbo_method: :delete, turbo_confirm: 'Delete booking?' }  %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
